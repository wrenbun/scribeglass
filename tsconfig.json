{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src",
        "eslint.config.mjs"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
        "docs"
    ]
}